<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Script</th>
      <th>Priority</th>
      <th>Repeat</th>
      <th>Memo</th>
      <th>Invoked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
	<td><%= task.id %></td>
        <td><%= task.name %></td>
        <td><%= task.script %></td>
        <td><%= task.priority %></td>
        <td><%= task.repeat %></td>
        <td><%= task.memo %></td>
        <td><%= task.invoked %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
